<div class='ml-4'>
  <h1><%= @job.title %> at <%= link_to @job.company.name, company_path(@job.company) %></h1>
  <br>
  <div class="row">
    <%= link_to "See other development jobs", jobs_path %>
  </div>
  <br>
  <div class="row">
    <b>Location: </b> &nbsp;  <%= @job.city%>
  </div>
  <br>
  <div class="row">
    <b>Interest: </b> &nbsp; <%= @job.level_of_interest %>
  </div>
  <br>
  <div class="row">
    <b>Description: </b> &nbsp; <%= @job.description %>
  </div>
  <br>

</div>



<!-- Company: <%= link_to @job.company.name, company_path(@job.company) %> -->

<div class="comment_box ml-2">
  <%= form_for [@job, @job_comment] do |f| %>
    <%= f.label "Notes: " %>
    <%= f.text_field :content %>
    <%= f.submit "Save" %>
  <% end %>
</div>

<div>
  <ul>
    <% @comments.each do |comment| %>
    <li>
      <%= comment.updated_at %>
      <%= comment.content %>
    </li>
    <% end %>
  </ul>
</div>
