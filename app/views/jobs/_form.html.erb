<%= form_for [@job] do |f| %>

  <%= f.collection_select(:company_id, @companies, :id, :name ) %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.collection_select(:category_id, @categories, :id, :title ) %>
  <%= link_to "Add New Category", new_category_path %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :level_of_interest %>
  <%= f.number_field :level_of_interest, in: 1..5, step: 1 %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.submit %>
<% end %>
