<%= form_for [@job] do |f| %>
  <ul class="list-unstyled text-left">
    <li>
      <%= f.label :category %>
      <%= f.collection_select(:category_id, @categories, :id, :title ) %>
      <%= link_to "Add New Category", new_category_path %>
    </li>
    <li>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </li>
    <li>
      <%= f.label :company %>
      <%= f.collection_select(:company_id, @companies, :id, :name ) %>
    </li>
    <li>
      <%= f.label :description %>
      <%= f.text_field :description %>
    </li>
    <li>
      <%= f.label :level_of_interest %>
      <%= f.number_field :level_of_interest, in: 1..5, step: 1 %>
    </li>
    <li>
      <%= f.label :city %>
      <%= f.text_field :city %>
    </li>

    <%= f.submit %>
  </ul>
<% end %>
